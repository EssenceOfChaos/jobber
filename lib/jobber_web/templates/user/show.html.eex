<h1>Show User</h1>
<ul>
  <li>
    <strong>Username:</strong>
    <%= @user.username %>
  </li>
  <li>
    <strong>Avatar:</strong>
    <%= @user.avatar %>
  </li>
  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>
</ul>
<div class="ui buttons">
  <%= link "Edit", to: Routes.user_path(@conn, :edit, @user), class: "ui button" %>
  <div class="or"></div>
  <%= link "Back", to: Routes.user_path(@conn, :index), class: "ui positive button" %>
</div>
