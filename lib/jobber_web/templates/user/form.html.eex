<%= form_for @changeset, @action, [class: "ui form"], fn f -> %>
<%= if @changeset.action do %>
  <div class="alert alert-danger">
    <p>Oops, something went wrong! Please check the errors below.</p>
  </div>
<% end %>
<div class="field">
  <%= label f, :username, class: "control-label" %>
  <div class="ui left icon input">
    <i class="user icon"></i>
    <%= text_input f, :username, placeholder: "Username" %>
  </div>
</div>
<div>
  <%= error_tag f, :username %>
</div>
<div class="field">
  <%= label f, :email, class: "control-label" %>
  <div class="ui left icon input">
    <i class="mail icon"></i>
    <%= email_input f, :email, class: "form-control", placeholder: "Email address" %>
  </div>
</div>
<%= error_tag f, :email %>
<div class="field">
  <%= label f, :password, class: "control-label" %>
  <div class="ui left icon input">
    <i class="lock icon"></i>
    <%= password_input f, :password, class: "form-control", autocomplete: "false", placeholder: "Minimum 6 characters" %>
  </div>
</div>
<%= error_tag f, :password %>
<div class="field">
  <%= label f, :password_confirmation, class: "control-label" %>
  <div class="ui left icon input">
    <i class="lock icon"></i>
    <%= password_input f, :password_confirmation, class: "form-control", autocomplete: "false", placeholder: "Confirm password" %>
  </div>
</div>
<%= error_tag f, :password_confirmation %>
<div>
  <%= submit "Sign up", class: "ui teal fluid button"  %>
</div>
<% end %>
